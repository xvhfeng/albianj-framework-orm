<?xml version="1.0" encoding="utf-8" ?>
<!-- 此配置文件提供所有的servie功能，所有的业务service必须使用此配置文件； 使用此配置文件的对象必须实现IAlbianService或者继承FreeAlbianService -->
<beans>
    <scanner>
        <package value="Albian.Test.Services.Impl" enable="true"/>
    </scanner>

    <service id="OrgUserService" class="Albian.Test.Services.Impl.OrgUserService" interface="">
        <properties>
            <property type="service" name="da" value="AlbianDataAccessService"/>
            <property type = "bean" name="class.of.bean">
                <argument type="boolean" value="true"/>
                <argument type="bean" value="class.of.bean"/>
                <argument type="int" value="5"/>
            </property>
            <property type="string" name="strval" value="value for strval"/>
            <property type="property" name="propertyVal" value="data.class" method="getStrval"  mode="direct" setwhen="afternew"/>
        </properties>
        <initer method="newBeanInstance">
            <argument name="arg1" type="string" value="value for strval" index="" />
            <argument name="propertyVal" type="int" value="data.class" method="getStrval" mode="direct"/>
            <argument name="arg2" type="list" value="data.class" method="getStrval" mode="direct"/>
            <argument name="arg2" type="list" valuetype="int">
                <value key="0" value="12121"/>
                <value key="1" value="233" />
            </argument>
            <argument name="arg3" type="map" keytype="string" valuetype="int">
                <value key="1" value="1"  />
                <value key="2" value="23"/>
                <value key="3" value="34"/>
            </argument>
            <argument name="arg2" type="map" value="data.class" method="getStrval" mode="direct"/>
            <argument name="arg4" type="string" value="" />
        </initer>
        <unloader name="unload_method"/>
    </service>

    <bean id="class.of.bean" class="class.of.bean" itf="interface.of bean">
        <init mode="factory"  class="pkg.of.factory.class" method="newBeanInstance"/>
    </bean>
</beans>